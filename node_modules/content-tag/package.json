{
  "name": "content-tag",
  "version": "1.2.2",
  "description": "A rust program that uses a fork of swc to parse and transform Javascript containing the content-tag proposal",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/embroider-build/content-tag.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./index.d.ts",
        "browser": "./pkg/standalone.js",
        "default": "./pkg/node/content_tag.cjs"
      },
      "require": {
        "types": "./index.d.ts",
        "default": "./pkg/node/content_tag.cjs"
      }
    }
  },
  "files": [
    "pkg/*",
    "pkg/node/*",
    "pkg/standalone/*",
    "index.d.ts",
    "index.d.cts"
  ],
  "scripts": {
    "build": "./build.sh",
    "prepack": "./build.sh",
    "ci:node": "mocha",
    "lint": "concurrently \"npm:lint:*(!fix)\" --names \"lint:\"",
    "lint:package": "publint",
    "lint:published-types": "attw --pack --ignore-rules false-esm",
    "start": "vite",
    "test": "npm run ci:node"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.13.2",
    "@vitest/browser": "^0.34.6",
    "chai": "^4.3.7",
    "code-equality-assertions": "github:mansona/code-equality-assertions#add-chai-build",
    "concurrently": "^8.2.2",
    "eslint": "^8.44.0",
    "mocha": "^10.2.0",
    "publint": "^0.2.6",
    "release-plan": "^0.5.0",
    "toml": "^3.0.0",
    "vite": "^5.0.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
